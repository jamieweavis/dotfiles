[user]
	name = Jamie
	email = 8133259+jamieweavis@users.noreply.github.com
	username = jamieweavis
	signingkey = ~/.ssh/id_ed25519.pub
	useConfigOnly = true

[init]
	defaultBranch = main

[core]
	editor = nvim
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
	excludesfile = ~/.config/git/ignore

[color]
	ui = true

[blame]
	coloring = highlightRecent
	date = relative

[push]
	autoSetupRemote = true
	default = current
	followTags = true

[pull]
	default = current
	rebase = true

[rebase]
	autostash = true

[status]
	branch = true
	short = true
	showStash = true
	showUntrackedFiles = all

[log]
	abbrevCommit = true

[pager]
	branch = false
	diff = diff-so-fancy | less --tabs=4 -RF

[interactive]
	singlekey = true
	diffFilter = diff-so-fancy --patch

[commit]
	gpgsign = true

[gpg]
	format = ssh

[diff-so-fancy]
	markEmptyLines = false

[alias]
	c = commit --verbose
	co = checkout
	cm = commit --message
	d = diff
	ds = diff --staged
	f = fetch
	fp = !git fetch && git pull
	l = log --graph --date-order --date=short --pretty=format:'%C(auto)%h%d %C(reset)%s %C(dim white)(%an, %ar)%C(reset)'
	p = push
	pu = push --set-upstream
	pun = push --set-upstream --no-verify
	s = status --short
	sp = stash pop
	su = stash --include-untracked
	sfp = !git stash && git fetch && git pull
	sufp = !git stash --include-untracked && git fetch && git pull
	sfpp = !git stash && git fetch && git pull && git stash pop
	undo = reset --soft HEAD~1
	b = branch

[color "blame"]
	highlightRecent = black bold,1 year ago,white,1 month ago,default,7 days ago,blue

[color "branch"]
	current  = magenta
	local    = default
	remote   = yellow
	upstream = green
	plain    = blue

[color "diff-highlight"]
	oldNormal = red
	oldHighlight = black red
	newNormal = green
	newHighlight = black green

[color "diff"]
	frag = cyan
	old = red
	new = green
	whitespace = yellow reverse
